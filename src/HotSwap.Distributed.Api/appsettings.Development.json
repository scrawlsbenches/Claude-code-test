{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "HotSwap.Distributed": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    }
  },
  "Telemetry": {
    "SamplingRate": 1.0
  },
  "Security": {
    "StrictMode": false
  },
  "RateLimiting": {
    "Enabled": true,
    "GlobalLimit": {
      "MaxRequests": 10000,
      "TimeWindow": "00:01:00"
    },
    "EndpointLimits": {
      "/api/v1/deployments": {
        "MaxRequests": 100,
        "TimeWindow": "00:01:00"
      },
      "/api/v1/clusters": {
        "MaxRequests": 600,
        "TimeWindow": "00:01:00"
      },
      "/api/v1/approvals": {
        "MaxRequests": 300,
        "TimeWindow": "00:01:00"
      },
      "/api/v1/auth": {
        "MaxRequests": 50,
        "TimeWindow": "00:01:00"
      }
    }
  }
}
